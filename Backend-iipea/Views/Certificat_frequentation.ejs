                    </thead>
                    <tbody>
                        <% 
                        let hasAcademicHistory = false;
                        let historiqueAnnees = [];
                        
                        if (data.historique_annees && Array.isArray(data.historique_annees)) {
                            historiqueAnnees = data.historique_annees.filter(annee => 
                                annee && (annee.annee || annee.niveau || annee.filiere)
                            );
                            hasAcademicHistory = historiqueAnnees.length > 0;
                        }
                        
                        if (hasAcademicHistory) { %>
                            <% historiqueAnnees.forEach(function(annee) { %>
