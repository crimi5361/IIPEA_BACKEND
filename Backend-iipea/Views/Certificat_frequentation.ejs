                </span>
                <span class="footer-text">
                    Email : secretariat@iipea.com | Copyright ¬© IIPEA Tous droits r√©serv√©s
                </span>
            </div>
        </div>
    </div>

    <script>
        // Script de gestion du chargement des images
        document.addEventListener('DOMContentLoaded', function() {
            console.log('D√©but du chargement des images...');
            
            // Pr√©chargement des images critiques
            const criticalImages = document.querySelectorAll('.school-logo, .student-photo, .watermark-logo');
            criticalImages.forEach(img => {
                if (img.complete) {
                    img.classList.add('image-loaded');
                    console.log('‚úÖ Image charg√©e:', img.src);
                    if (img.classList.contains('student-photo')) {
                        const errorPlaceholder = img.nextElementSibling;
                        if (errorPlaceholder && errorPlaceholder.classList.contains('photo-error')) {
                            errorPlaceholder.style.display = 'none';
                        }
                    }
                }
            });

            // V√©rification sp√©cifique du filigrane
            const watermark = document.querySelector('.watermark-logo');
            if (watermark) {
                if (watermark.complete) {
                    console.log('‚úÖ Filigrane pr√©charg√©');
                }
                watermark.onload = function() {
                    console.log('‚úÖ Filigrane charg√© avec succ√®s');
                };
                watermark.onerror = function() {
                    console.error('‚ùå Erreur chargement filigrane:', this.src);
                    this.style.display = 'none';
                };
            }

            // Timeout de secours pour les images
            setTimeout(() => {
                const loadingImages = document.querySelectorAll('.image-loading:not(.image-loaded)');
                console.log('Images restantes en chargement:', loadingImages.length);
                loadingImages.forEach(img => {
                    img.style.opacity = '1';
                    console.log('üîÑ Image charg√©e par timeout:', img.src);
                });
            }, 3000);

            // Gestion sp√©cifique des photos d'√©tudiants
            const studentPhotos = document.querySelectorAll('.student-photo');
            studentPhotos.forEach(photo => {
                photo.addEventListener('error', function() {
