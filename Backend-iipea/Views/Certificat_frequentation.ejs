            <!-- Historique des ann√©es acad√©miques -->
            <div class="history-table-container">
                <table class="history-table">
                    <thead>
                        <tr>
                            <th>Ann√©e Acad√©mique</th>
                            <th>Niveau</th>
                            <th>Fili√®re</th>
                            <th>Date d'Inscription</th>
